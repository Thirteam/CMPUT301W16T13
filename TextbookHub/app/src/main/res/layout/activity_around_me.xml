<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_around_me"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/layout_no_book_around"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nothing_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nothing_around"
            android:gravity="center"
            android:textSize="@dimen/textsize_title_large"
            android:textColor="@color/mat_grey_dark"/>

    </LinearLayout>



</RelativeLayout>