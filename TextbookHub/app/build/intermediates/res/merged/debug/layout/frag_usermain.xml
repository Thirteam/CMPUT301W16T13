<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="99"
        android:background="@color/mat_grey_lighter"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_separator"
            android:layout_marginRight="@dimen/margin_separator"
            android:layout_marginTop="@dimen/margin_separator"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="0dp" android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_separator"
                android:id="@+id/button_userprofile"
                android:background="@drawable/button_white"
                android:clickable="true"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/margin_imageview"
                    android:layout_marginLeft="@dimen/margin_imageview"
                    android:layout_marginRight="@dimen/margin_imageview"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:src="@mipmap/ic_account_circle_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:text="@string/userprofile"
                    android:textColor="@color/mat_grey_darker"
                    android:textSize="@dimen/textsize_btn_main"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/button_mybids"
                android:background="@drawable/button_white"
                android:clickable="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/margin_imageview"
                    android:layout_marginLeft="@dimen/margin_imageview"
                    android:layout_marginRight="@dimen/margin_imageview"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:src="@mipmap/ic_bids_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/my_bids"
                    android:textColor="@color/mat_grey_darker"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:textSize="@dimen/textsize_btn_main"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_separator"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="0dp" android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_separator"
                android:id="@+id/button_myinventory"
                android:background="@drawable/button_white"
                android:clickable="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:id="@+id/iv_inventory"
                    android:layout_marginTop="@dimen/margin_imageview"
                    android:layout_marginLeft="@dimen/margin_imageview"
                    android:layout_marginRight="@dimen/margin_imageview"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:src="@mipmap/ic_inventory_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/my_inventory"
                    android:textColor="@color/mat_grey_darker"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:textSize="@dimen/textsize_btn_main"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp" android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/button_myborrows"
                android:background="@drawable/button_white"
                android:clickable="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/margin_imageview"
                    android:layout_marginLeft="@dimen/margin_imageview"
                    android:layout_marginRight="@dimen/margin_imageview"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:src="@mipmap/ic_import_borrows_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/my_borrows"
                    android:layout_marginBottom="@dimen/margin_imageview_small"
                    android:textColor="@color/mat_grey_darker"
                    android:textSize="@dimen/textsize_btn_main"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_indigo"
            android:id="@+id/button_logout"
            android:text="@string/logout"
            android:textColor="@color/pure_white"
            android:layout_marginLeft="@dimen/margin_separator"
            android:layout_marginRight="@dimen/margin_separator"
            android:textSize="@dimen/textsize_btn_login"
            android:layout_weight="1"
            />

    </LinearLayout>



